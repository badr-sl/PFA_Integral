<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    >

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Task Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Brief Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your tasks efficiently and effectively with our app."
        android:textSize="16sp"
        android:layout_marginBottom="32dp" />

    <!-- Quick Actions -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button_view_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Tasks"
            android:layout_marginEnd="16dp"
            android:onClick="onViewTasksClicked"
            android:backgroundTint="@color/primaryDarck"
            android:textColor="@android:color/white"/>


    </LinearLayout>

</LinearLayout>
